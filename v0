# shellcheck disable=SC2142

alias param='{ eval "$(O= _param_main "$@")"; }'

xrc dict/v0

param_new(){
    local O="${1:?Provide object name}"
    alias "$O.param={ eval \"\$(O=$O _param_main \"\$@\")\"; }"
    alias "$O.param_default=O=$O param_default"
    alias "$O.del=alias $O.param=; alias $O.param_default="
}

# _PARAM_AWK_PATH="$(xrc which param/v0.awk)"
_PARAM_AWK_PATH=./v0.awk

# TODO: handle newline in ARGSTR
_param_main(){
    local IFS
    IFS="$(printf "\005")"  # ARG_SEP in awk script
    {
        printf "%s${DICT_SEP}" "$*"
        cat
        printf "%s" "${DICT_SEP}"
        [ -n "$O" ] && dict_dump
    } | awk -v ARG_SEP="$IFS" -v RS="${DICT_SEP}" -f "$_PARAM_AWK_PATH" -
}

param_default_dump(){
    # Using JO
    O="${PARAM_DEFAULT_VAR_PREFIX}${O:?Provide Object}" dict_dump | dict_pjson
}

param_default_load(){
    O="${PARAM_DEFAULT_VAR_PREFIX}${O:?Provide Object}" dict_load | dict_pjson_parse
}

PARAM_DEFAULT_VAR_PREFIX=___X_CMD_X_BASH_PARAM_DEFAULT_

# dict
param_default(){
    local O="${PARAM_DEFAULT_VAR_PREFIX}${O:?Provide Object}" 
    case $# in
        0) dict_print         ;;
        1) dict_get "$1"      ;;
        2) dict_put "$1" "$2" ;;
        *) printf "%s" "TODO: help doc here"                    ;;
    esac
}

param_default_clear(){
    O="${PARAM_DEFAULT_VAR_PREFIX}${O:?Provide Object}" dict_clear
}

alias param_example='local PARAM_EXAMPLE 2>/dev/null; _param_example PARAM_EXAMPLE'

param_example_show(){
    # shellcheck disable=SC2154
    echo "$PARAM_EXAMPLE"
}

_param_example(){
    local name=$1 
    local s
    shift
    # shellcheck disable=SC2034
    s="$(_param_example_cat "$@")"
    eval "$name=\"\$s\""
}

_param_example_cat(){
    local i
    echo "----------------"
    printf "Example:\n"
    for (( i=1; i<${#@}; i++ )); do
        printf "  $(tput setaf 6)%s:$(tput init)\n" "* ${!i}"
        (( i++ ))
        printf "    > $(tput setaf 2)%s$(tput init)\n" "${!i}"
    done
}

