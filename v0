# PARAM_ARGS=$li
# $@

# gitee.repo.create -a public a1 a2 a3


w(){
    local O=c
    param_new gitee.$O

    gitee.c.param_default repo xh1

    echo gitee.$O.param_default repo xh1

    alias gitee.$O.param_default

    echo "-------"
    eval gitee.$O.param_default repo
    echo "-------"

    gitee.$O.param <<A
    --repo      "Provide repo name"             =~      [A-Za-z0-9\n]+
    --user=el   -u  "Provide user name"         =~      [A-Za-z0-9]+
    --access    -a  "Access Priviledge"         =       public private
    --verbose   -v  "Display in verbose mode"   =FLAG
    #1          =~      [A-Za-z0-9\n]+
    ...         =~      [A-Za-z0-9\n]+
A

    echo "----"

    echo "repo: $repo"
    echo "user: $user"
    echo "access: $access"
    echo "verbose: $verbose"

    echo "Other arguments:    $*"
    echo "$HELP_DOC"
}

# O=OBJECT_NAME param_default repo xk1
O=OBJECT_NAME w -a private

# w --repo hi

ff(){
    O=OBJECT_NAME w -a private --repo "asfasfd
asdfaf" work a b
}

ff

